#include<stdio.h>

#include<stdlib.h>

/*

     Kịch bản:

1.  Tạo trước file có tên test.txt với nội dung bất kỳ,

2.  Nhập file có tên khác test.txt,

3.  Chạy lại và nhập file có tên là test.txt

*/

int main(){

     FILE *myFile;

     int n = 100, m = 100;

    char buff[n], fileName[m];

   

    printf("Enter the File Name to open: ");

    gets(fileName);

    if( (myFile = fopen(fileName, "r") ) == NULL){

        fputs("\nFile not found", stderr);

        /* Error message on standard error rather than standard output */

        exit(1);

    }

    while(!feof(myFile)){

      if(fgets(buff, 81, myFile)){

            fputs(buff, stdout ); //stdprn

            /* Send line to printer */

        }

    }

    fclose(myFile);

 

     return 0;

}
